<odoo>
	<data>
		<!-- Form View -->
		<record model="ir.ui.view" id="samarem_saleorder_form">
			<field name="name">samarem.saleorder.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
        <xpath expr="//field[@name='note']" position="before">
          <field name="Remise"/>
        </xpath>
        <xpath expr="//field[@name='amount_tax']" position="before">
          <field name="RemiseCalculated" readonly="1"/>
        </xpath>
			</field>
		</record>
	</data>
</odoo>