<?xml version="1.0" encoding="utf-8"?>
<!-- Ce template gère la mise en forme des rapports PDF (Factures, devis, duplicata proforma, etc.) -->
<odoo>
    <data>
        <!-- Héritage de la vue "sale.report_saleorder_document" -->
        <template id="samarem_report_invoice_document_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@class='clearfix']/div[@class='row']/div[1]/table[1]/tr[1]" position="after">
                <tr style="border-bottom:1px solid #dddddd;">
                    <td><span>Remise</span></td>
                    <td class="text-right">
                        <span t-field="doc.RemiseCalculated"/>
                    </td>
                </tr>
            </xpath>
        </template>
  </data>
</odoo>